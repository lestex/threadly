namespace :unicorn do
  %w(start stop restart).each do |task_name|
    desc "#{task } unicorn #{task_name}"
    task task_name do
      on roles(:app), in: :sequence, wait: 5 do
      	#unicorn_name = fetch(:full_app_name)        
        sudo "service unicorn_#{fetch(:full_app_name)} #{task_name}"
      end
    end
  end  
end